// vercel.json
{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "microphone=(self)"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/firebase-messaging-sw.js",
      "headers": [
        {
          "key": "Service-Worker-Allowed",
          "value": "/firebase-cloud-messaging-push-scope"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/notify",
      "destination": "/api/notify.js"
    }
  ]
}